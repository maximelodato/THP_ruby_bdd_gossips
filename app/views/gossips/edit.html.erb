<h1>Modifier le commentaire</h1>

<%= form_with(model: @comment, url: comment_path(@comment), method: :patch) do |form| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :guest_name %>
    <%= form.text_field :guest_name %>
  </div>

  <div class="field">
    <%= form.label :guest_email %>
    <%= form.email_field :guest_email %>
  </div>

  <div class="actions">
    <%= form.submit 'Modifier le commentaire' %>
  </div>
<% end %>
